    <form  class="columns" id="app"  action="create" method="POST" >
        <div class="column">
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" type="text" v-model="name" required />
                </div>
            </div>
            <div class="field">
                <label class="label">Teacher/Student in Charge</label>
                <div class="control">
                    <input class="input" type="text" v-model="incharge" required />
                </div>
            </div>

            <div class="field">
                <b-field label="Room to be reserved">
                    <b-select name="room" placeholder="Select a room">
                        <option v-for="equipment in equipments" :value="equipment.Room">
                            {{ equipment.Room }}
                        </option>
                    </b-select>
                </b-field>
            </div>

            <div class="field">
                <label class="label">Purpose</label>
                <div class="control">
                    <textarea class="textarea" placeholder="Textarea" rows="5" name="detail" required></textarea>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="columns">
                <div class="column">
                    <label class="label">Number of students involved</label>
                    <div class="control">
                        <input class="input" type="number" name="participants" required />
                    </div>
                </div>
                <div class="column">
                    <label class="label">Interest Club or Class</label>
                    <div class="control">
                        <input class="input" type="text" name="associations" required />
                    </div>
                </div>
            </div>
            <div class="columns">
                <div class="column">
                    <b-field label="Start Date">
                        <b-datepicker name="startDate" v-model="selected" :locale="locale"
                            placeholder="Click to select..." icon="calendar" trap-focus>
                        </b-datepicker>
                    </b-field>
                </div>
                <div class="column">
                    <b-field label="End Date">
                        <b-datepicker name="endDate" v-model="selected" :locale="locale"
                            placeholder="Click to select..." icon="calendar" trap-focus>
                        </b-datepicker>
                    </b-field>
                </div>
            </div>
            <div class="columns">
                <div class="column">
                    <b-field label="Start time">
                        <b-timepicker rounded placeholder="Click to select..." icon="clock"
                            :enable-seconds="enableSeconds" :hour-format="hourFormat" :locale="locale">
                        </b-timepicker>
                    </b-field>
                </div>
                <div class="column">
                    <b-field label="End time">
                        <b-timepicker rounded placeholder="Click to select..." icon="clock"
                            :enable-seconds="enableSeconds" :hour-format="hourFormat" :locale="locale">
                        </b-timepicker>
                    </b-field>
                </div>
            </div>

            <div class="block">
                <b-radio v-model="radio" name="booking_type" native-value="oneTime">
                    One time Event
                </b-radio>
                <b-radio v-model="radio" name="booking_type" native-value="recurrent">
                    Recurrently
                </b-radio>
            </div>

            <b-field>
                <b-select placeholder="Recurrent Type" name="rtype" :disabled="!isRecurrent">
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                </b-select>
            </b-field>

            <div class="columns">
                <div class="column">
                    <label class="label">Long Table</label>
                    <div class="control">
                        <input class="input" type="number" name="table" min="0" required />
                    </div>
                </div>
                <div class="column">
                    <label class="label">Chairs</label>
                    <div class="control">
                        <input class="input" type="number" name="chairs" min="0" required />
                    </div>
                </div>
            </div>
            <div class="columns">
                <div class="column">
                    <div class="control">
                        <label class="label">Equipment</label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            Notebook Computer
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            LCD Projector & Screen
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            Internet Connection
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            Visualizer
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            Portable Amplifer
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            VCD/DVD player
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            CD player
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="equipment" />
                            Rubbish bin
                        </label>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Special Arrangement Layout Plan</label>
                <div class="control">
                    <input class="input" type="file" name="arrangement" accept="image/x-png,image/gif,image/jpeg"
                        required />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <button class="button is-link is-waring"  type="submit">
                        Submit
                    </button>
                </div>
            </div>
        </div>
